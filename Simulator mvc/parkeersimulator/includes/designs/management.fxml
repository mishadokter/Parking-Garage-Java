<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<GridPane fx:controller="parkeersimulator.view.ManagementView"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">

    <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>

    <Text id="welcome-text" text="Management Panel"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Pie Chart View:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <Button text="Show Pie Chart View" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#handleButton1Action" />

    <Label text="Bar Graph View:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <Button text="Show Bar Graph View" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#handleButtonBarChart"/>

    <PieChart id="piechart" fx:id="piechart" layoutX="0" layoutY="2" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="piechart"/>

    <BarChart fx:id="barChart" visible="false" layoutX="30.0" layoutY="264.0" prefHeight="216.0" prefWidth="552.0" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="barchart" >
        <xAxis>
            <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
            <NumberAxis side="LEFT" />
        </yAxis>
    </BarChart>

    <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="4" />



</GridPane>